{
   "logging":{
      "file":"/var/log/rpistatusvialuma.log",
      "level":"warning"
   },
   "luma":{
      "demo_opts.py":{
         "folder":"/opt/luma.examples/examples"
      }
   },
   "backgroundcolor":"BLACK",
   "boxmarginleft":27,
   "font": {
      "color": "WHITE",
      "ttf": false,
      "ttffile": "/usr/share/fonts/truetype/dejavu/DejaVuSerif.ttf",
      "ttfsize": 8
   },
   "image": {
      "refresh": 0.2,
	  "toplimit": 10,
	  "bottomlimit": 10,
      "savepath": "/tmp/image_%Y%m.png"
   },
   "linefeed":10,
   "components":[
      "hostname",
      "currentdatetime",
      "cpu",
      "ram",
      "ipping",
      "uptime",
      "board",
      "temperatur",
      "drives",
      "lastbackupimage",
      "os",
      "kernelversion",
      "version",
      "helloworld",
      "empty"
   ],
   "component_pihole": {
    "dbfile": "/etc/pihole/pihole-FTL.db",
	 "showlastblockeddomain": true,
	 "showblockedlast24h": true,
	 "allowedstatus": "0,2,3,12,13,14,17",
     "lastblockedhours": 24
   },
   "component_mqttstatus": {
     "mqttuser": "",
     "mqttpassword": ""
   },
   "component_checkmac": {
    "mac": "00:00:00:00:00:00"
   },   
   "component_drive":{
      "drive":[
         "/",
         "/"
      ]
   },
   "component_hostname": {
    "font": {
      "default": false,
      "ttffile": "/usr/share/fonts/truetype/dejavu/DejaVuSerif.ttf",
      "size": 16
    }
   },
  "component_ipping": {
   "pingintervall": 300,
    "devices": [
     {
      "interface": "eth0",
      "local": "192.168.20.1",
      "remote": "8.8.8.8"
     },
     {
      "interface": "eth1",
      "local": "192.168.20.1",
      "remote": "8.8.8.8"
     },
     {
      "interface": "wlan0",
      "local": "192.168.2.1",
      "remote": "8.8.4.4"
     }
    ]
   },
   "component_lastbackupimage":{
      "checkforlatestfile":"/mnt/%HOSTNAME%/*.img"
   },
   "pushover":{
      "messages":1,
      "apikey":"",
      "userkey":""
   }
}
