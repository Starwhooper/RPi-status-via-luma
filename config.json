{
  "luma":{
    "demo_opts.py":{
		"folder": "/opt/luma.examples/examples"
	},
	"config": "/opt/luma.examples/conf/st7735.conf"
  },
  "display":{
	  "width": 128,
	  "height": 160
  },
  "backgroundcolor": "BLACK",
  "boxmarginleft": 27,
  "fontcolor": "WHITE",
  "imagerefresh": 0.2,
  "###lcddriver": "waveshare144",
  "###no_y_scroll_offset": 2,
  "components": [
    "hostname",
    "currentdatetime",
    "drive",
    "uptime",
    "ipping",
    "board",
    "cpu",
    "ram",
    "temperatur",
    "sd",
    "border",
    "lastbackupimage",
    "os",
    "#####version",
	"helloworld"
  ],
  "component_drive": {
    "drive": [
      "/"
    ]
  },
  "font": {
	"default": false,
    "ttffile": "/opt/luma.examples/examples/fonts/FreePixel.ttf",
	"size1":12,
	"size2":16
  },
  "component_ipping": {
    "localpingdestination": "",
    "pingintervall": 300,
    "remotepingdestination": "8.8.8.8"
  },
  "component_lastbackupimage": {
    "checkforlatestfile": "/mnt/braavos/images/raspberry/%HOSTNAME%/_image/*.img"
  },
  "###pushover": {
    "###messages": 1,
    "###apikey": "",
    "###userkey": ""
  },
  "###rotate": 180,
  "###savescreen": {
    "###destination": "/mnt/share/status_%HOSTNAME%.png",
    "###intervall": 3600
  },
  "scrollingtextwait": 5,
  "###wallpaper": {
    "###file": "wp.jpg",
    "###enable": "true",
    "###per_minute": 6
  },
  "###saveimagedestination": "/mnt/braavos/images/raspberry/status_%HOSTNAME%.png"
}
